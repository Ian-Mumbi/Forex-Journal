<%- include ('../partials/header') %>

<div class="container">
    <div class="row">
        <h1 class="heading">Edit <%= trade.description %></h1>
        <div class="container-form">
            <form action="/trades/<%= trade._id %>/edit?_method=PATCH" method="POST">
                <div class="form-group">
                    <input type="text" name="description" placeholder="Description" class="form-control"
                    value="<%= trade.description %>">
                </div>
                <div class="form-group">
                    <input type="text" name="currencyPair" placeholder="Currency Pair" class="form-control"
                    value="<%= trade.currencyPair %>">
                </div>
                <div class="form-group">
                    <input type="text" name="profit" placeholder="Profit" class="form-control"
                    value="<%= trade.profit %>">
                </div>
                <div class="form-group">
                    <input type="text" name="orderType" placeholder="Order Type" class="form-control"
                    value="<%= trade.orderType %>">
                </div>
                <div class="form-group">
                    <input type="number" name="lotSize" placeholder="LotSize" min="0.01" max="1.0" step="0.01"
                        class="form-control"
                        value="<%= trade.lotSize %>">
                </div>
                <div class="form-group">
                    <input type="date" name="date" placeholder="Open Date" class="form-control"
                    value="<%= trade.date %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include ('../partials/footer') %></input>