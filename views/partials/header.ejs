<!DOCTYPE html>

<html>
    <head>
        <title>Forex Journal</title>
        <link href="/images/favicon.png" rel='icon' />
        <link rel="stylesheet" href="/css/bootstrap.css">
        <link rel="stylesheet" href="/css/font-awesome/css/font-awesome.min.css">
        <link rel="stylesheet" href="/css/app.css">
        <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a href="/trades" class="navbar-brand"><i class="fa fa-sticky-note"></i> Journal</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <% if (currentUser) { %>
                            <p id="profile-image-preview">
                                <a href="/profile">
                                    <img id="profile-image" src="/profile.png" alt="Profile picture" class="rounded mx-auto d-block">
                                </a>
                            </p>
                            <li><a href="/profile"><i class="fa fa-user-circle-o"></i> Hey! Welcome <%= currentUser.username %></a></li>
                            <li><a href="/logout"><i class="fa fa-sign-out"></i> Logout</a></li>
                        <% } else { %>
                            <li><a href="/login">Login</a></li>
                            <li><a href="/signup">Sign Up</a></li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container">
            <% if (error && error.length > 0) { %>
                <div class="alert alert-danger" role="alert"><%= error %></div>
            <% } %>
            <% if (success && success.length > 0) { %>
                <div class="alert alert-success" role="alert"><%= success %></div>
            <% } %>
        </div>
