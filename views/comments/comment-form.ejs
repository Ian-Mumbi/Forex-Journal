<%- include ('../partials/header') %>

<div class="container">
    <div class="row">
        <h1 class="heading">Add a comment to <%= trade.description %></h1>
        <div class="container-form ">
            <form action="/trades/<%= trade._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea name="text" cols="45" rows="10" placeholder="Comment Text"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include ('../partials/footer') %>